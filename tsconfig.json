{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "types",
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "typedocOptions": {
    "entryPoints": ["src/mini-emitter.ts"],
    "out": "./docs"
  },
  "include": [
    "src"
  ]
}
